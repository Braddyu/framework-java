<!-- 读一条记录 -->
<select id="getData" resultMap="reportPieMap" parameterType="com.anguo.web.db.domain.ReportPie">
    select * from  wenanguo.report_pie
    where id = #{id}
</select>

<!-- 插入记录  -->
<insert id="insertData" parameterType="com.anguo.web.db.domain.ReportPie" useGeneratedKeys="true" keyProperty="id">
	
	insert into  wenanguo.report_pie
	<trim prefix="(" suffix=")" suffixOverrides=",">
		id,
		 		 		 		 		<if test="name != null">
				name,
	  	</if>
	  			 		 		<if test="y != null">
				y,
	  	</if>
	  			 		 		<if test="sliced != null">
				sliced,
	  	</if>
	  			 		 		<if test="selected != null">
				selected,
	  	</if>
	  			 	</trim>
	<trim prefix="values (" suffix=")" suffixOverrides=",">
#{id},
		
		<if test="name != null">
#{name},
</if>
				<if test="y != null">
#{y},
</if>
				<if test="sliced != null">
#{sliced},
</if>
				<if test="selected != null">
#{selected},
</if>
					</trim>
</insert>

<!-- 修改  -->
<update id="updateData" parameterType="com.anguo.web.db.domain.ReportPie">
	update  wenanguo.report_pie 
	<set>
										<if test="name != null and name != ''">
			name=#{name},
		</if>
								<if test="y != null and y != ''">
			y=#{y},
		</if>
								<if test="sliced != null and sliced != ''">
			sliced=#{sliced},
		</if>
								<if test="selected != null and selected != ''">
			selected=#{selected},
		</if>
					</set>
	where id=#{id}
</update>

<!-- 删除 -->
<delete id="deleteData" parameterType="com.anguo.web.db.domain.ReportPie">
	delete from  wenanguo.report_pie 
	where id=#{id}
</delete>

</mapper>