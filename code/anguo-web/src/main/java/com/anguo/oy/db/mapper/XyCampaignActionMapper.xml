<mapper namespace="com.anguo.oy.db.mapper.XyCampaignActionMapper">

 <!-- 配置内容信息 -->
	<resultMap id="xyCampaignActionMap" type="com.anguo.oy.db.domain.XyCampaignAction" >
		
		 		<result property="id" column="id" />
		 		<result property="openid" column="openid" />
		 		<result property="action" column="action" />
		 		<result property="status" column="status" />
		 		<result property="operateUserId" column="operate_user_id" />
		 		<result property="operateDate" column="operate_date" />
		 		 <result property="realName" column="real_name" />
	</resultMap>

<!-- 分页查询 -->
<select id="getPageData" resultMap="xyCampaignActionMap"
               parameterType="com.anguo.oy.db.domain.XyCampaignAction">
     select a.*,b.real_name from ${commonSchema}.xy_campaign_action a left join ${commonSchema}.common_sys_user b on a.operate_user_id=b.id 
     <trim prefix="where" prefixOverrides="and |or ">
             <if test="id != null and id != ''">
           and (a.id like concat('%',concat(#{id},'%')))
        </if>
             <if test="openid != null and openid != ''">
           and (a.openid like concat('%',concat(#{openid},'%')))
        </if>
             <if test="action != null and action != ''">
           and (a.action like concat('%',concat(#{action},'%')))
        </if>
             <if test="status != null and status != ''">
           and (a.status like concat('%',concat(#{status},'%')))
        </if>
             <if test="operateUserId != null and operateUserId != ''">
           and (a.operate_user_id like concat('%',concat(#{operateUserId},'%')))
        </if>
             <if test="operateDate != null and operateDate != ''">
           and (a.operate_date like concat('%',concat(#{operateDate},'%')))
        </if>
          </trim>
     order by id desc
</select>
	

