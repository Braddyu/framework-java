<!-- 读一条记录 -->
<select id="getData" resultMap="xyCampaignActionMap" parameterType="com.anguo.oy.db.domain.XyCampaignAction">
    select * from  ${commonSchema}.xy_campaign_action
    where id = #{id}
</select>

<!-- 插入记录  -->
<insert id="insertData" parameterType="com.anguo.oy.db.domain.XyCampaignAction" useGeneratedKeys="true" keyProperty="id">
	
	insert into  ${commonSchema}.xy_campaign_action
	<trim prefix="(" suffix=")" suffixOverrides=",">
		id,
		 		 		 		 		<if test="openid != null">
				openid,
	  	</if>
	  			 		 		<if test="action != null">
				action,
	  	</if>
	  			 		 		<if test="status != null">
